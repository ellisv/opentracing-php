{
    "name": "opentracing/opentracing",
    "description": "OpenTracing API for PHP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "José Carlos Chávez",
            "email": "jcchavezs@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^5.6||^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.7.19",
        "squizlabs/php_codesniffer": "3.*"
    },
    "autoload": {
        "psr-4": {
            "OpenTracing\\": "src/"
        },
        "files": ["src/Tags.php", "src/Formats.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "OpenTracing\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit tests",
        "lint": "phpcs --standard=ZEND --standard=PSR2 --ignore=*/vendor/* ./",
        "fix-lint": "phpcbf --standard=ZEND --standard=PSR2 --ignore=*/vendor/* ./"
    }
}
